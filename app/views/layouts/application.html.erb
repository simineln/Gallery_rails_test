<!DOCTYPE html>
<html>
  <head>
    <title>Gallery</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
      <a class="navbar-brand" href="#">Gallery</a>
      
      <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to "Home", root_path, class: "nav-link #{'active' if params[:controller] == 'images'}"%>
          </li>
          
          <% @categoryNav.each do |category| %>
            <li>
              <%= link_to category.name, category_path(category.id), class: "nav-link" %>
            </li>
          <% end %>
        
        </ul>

        <ul class="navbar-nav">
          <li class="nav-item"><%= link_to "Upload", upload_path, class: "nav-link"%></li>
          <li class="nav-item"><%= link_to "Add Category", new_category_path, class: "nav-link"%></li>
        </ul>

      </div>
    </nav>

    <section>
      <div class="container">

        <!-- Alerts & Messages -->
        <% if flash[:notice] %>
          <div class="alert alert-success"><%= flash[:notice] %> </div>
        <% end %>
        <% if flash[:alert] %>
          <div class="alert alert-danger"><%= flash[:alert] %> </div>
        <% end %>
        
        <%= yield %>
        
      </div>
    </section>



    <footer>
      <p>Copyright &copy; 2019, Gallery</p>
    </footer>


  </body>
</html>
